<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="165dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedbutton"
        android:onClick="goBack"
        android:text="Back"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LPG" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="122dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@android:drawable/sym_action_call"
        android:drawablePadding="2dp"
        android:text="Emergency Numbers"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="146dp"
        android:layout_height="106dp"
        android:layout_marginStart="266dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/Police"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"

        app:button_bottom_padding="20dp"

        app:button_image_disabled="@drawable/ic_baseline_call_24"
        app:button_image_enabled="@drawable/ic_baseline_call_24"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"

        app:button_top_padding="20dp"
        app:inner_text="Police"
        app:inner_text_background="@drawable/button_design"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:button_background="@drawable/shape_rounded"/>

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/fire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:button_bottom_padding="20dp"
        app:button_image_disabled="@drawable/ic_baseline_call_24"
        app:button_image_enabled="@drawable/ic_baseline_call_24"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:inner_text="Fire Brigade"
        app:inner_text_background="@drawable/button_design"

        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Police"
        app:button_background="@drawable/shape_rounded"/>

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/ambulance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:button_bottom_padding="20dp"
        app:button_image_disabled="@drawable/ic_baseline_call_24"
        app:button_image_enabled="@drawable/ic_baseline_call_24"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:inner_text="Ambulance"
        app:inner_text_background="@drawable/button_design"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire"
        app:button_background="@drawable/shape_rounded"/>

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/natEmg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:button_bottom_padding="20dp"
        app:button_image_disabled="@drawable/ic_baseline_call_24"
        app:button_image_enabled="@drawable/ic_baseline_call_24"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:inner_text="National Emg. No."
        app:inner_text_background="@drawable/button_design"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ambulance"
        app:button_background="@drawable/shape_rounded"/>

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/LPG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:button_bottom_padding="20dp"
        app:button_image_disabled="@drawable/ic_baseline_call_24"
        app:button_image_enabled="@drawable/ic_baseline_call_24"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:inner_text="LPG leak"
        app:inner_text_background="@drawable/button_design"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/natEmg"
        app:button_background="@drawable/shape_rounded"/>

</androidx.constraintlayout.widget.ConstraintLayout>